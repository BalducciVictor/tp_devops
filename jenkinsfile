pipeline {
  agent any

  stages {
    stage('Checkout') {
      steps {
        checkout scm
      }
    }

    stages {
        stage('Test') {
            steps {
                echo 'test'
            }
        }
    }

    stage('Build') {
      when {
        branch 'main'
      }

      steps {
        sh 'npm install'
        sh 'npm run build'
      }
    }
  }
}